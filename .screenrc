startup_message off
hardstatus alwayslastline
hardstatus string "%{= kw}%-w%{= BW}%n %t%{-}%+w %-= %D %m/%d/%y | %c"
vbell off

bindkey \033[D prev # ctrl+left
bindkey \033[C next
bindkey [1;5D prev # ctrl+left, gnome terminal
bindkey [1;5C next

#bindkey  kill
#bindkey -k k1  select 1
#bindkey -k k2 select 2
#bindkey -k k3 select 3
#bindkey -k k4 select 4
#bindkey -k k5 select 5
#bindkey -k k6 select 6
#bindkey -k k7 select 7
#bindkey -k k8 select 8
bindkey -k k9 screen
bindkey -k k; kill     # F10
bindkey -k F1 windowlist -b # F11
bindkey -k F2 detach   # F12

bind  encoding big5 utf8
bind  encoding utf8 utf8
